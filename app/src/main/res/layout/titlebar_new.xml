<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/app_blue"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageviewpersonal"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:contentDescription="@string/educationdetails"
        android:paddingLeft="5dp"
        android:src="@drawable/edu_ic_w" />

    <TextView
        android:id="@+id/textviewpersonal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imageviewpersonal"
        android:paddingLeft="5dp"
        android:text="@string/educationdetails"
        android:textColor="@android:color/white"
        android:textSize="@dimen/bar_textsize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tvFAQ"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:src="@drawable/ic_faq" />

        <ImageView
            android:id="@+id/imgClear"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:padding="5dp"

            android:src="@drawable/ic_clear" />

        <ImageView
            android:id="@+id/imgSettings"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:src="@drawable/ic_settings" />


    </LinearLayout>
</RelativeLayout>